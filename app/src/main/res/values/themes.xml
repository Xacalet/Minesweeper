<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MineSweeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_600</item>
        <item name="colorPrimaryVariant">@color/teal_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Avoid Xiaomi devices to force Dark Theme. -->
        <item name="android:forceDarkAllowed">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/teal_800</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.MineSweeper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MineSweeper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MineSweeper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>