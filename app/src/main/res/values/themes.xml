<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MineSweeper" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_600</item>
        <item name="colorPrimaryDark">@color/teal_800</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/teal_800</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Some manufacturers set the following default value to true -->
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>